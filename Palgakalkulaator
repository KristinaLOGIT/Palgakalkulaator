            else if (salary !>= 1200)
            {
                Console.WriteLine("The salary is too high, have to pay extra tax");

            }
            else { Console.WriteLine("Do you want to know your net salary, write yes, no"); }

            string shape = Console.ReadLine();

            if (shape == "yes")
            {

                double a = (salary - 20 % -0.5);

}
            else { Console.WriteLine("Do you want to know your net salary for a year, write yes, no"); }

            if (shape == "yes")
            {

                double b = (salary - 20 % -0.5 %12);
            
}
            else { Console.WriteLine("Do you want to know your net salary, write yes, no"); }

                double c = ( salary - 20.5 %1);
